#: import Window kivy.core.window.Window

<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color: 
            rgba: (1, 1, 1, .8)
        Rectangle:
            size: self.size
            pos: self.pos
        
    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color: 
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        
        FlatButton:
            id: file_trigger
            text: 'logout'
            on_release: root.logout()
            size_hint: (.1, None)
            height: 30
            underline: True

           
                    
                        

        Label: 
            text: 'Admin Dashboard'
            bold: True
            size_hint: (.9, None)
            height: 30
    BoxLayout:
        id: content_nav

        BoxLayout:
            id: nav_tabs
            size_hint_x: .2
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color: 
                    rgba: (.06, .40, .40, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            ToggleButton: 
                id: user_toggle
                text: 'Manage Users'
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .50, .50, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
                
            ToggleButton: 
                id: products_toggle
                text: 'Manage Products'
                size_hint_y: .1
                background_color: (.06, .50, .50, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
                
            ToggleButton: 
                id: analysis_toggle
                text: 'Product Analysis'
                size_hint_y: .1
                background_color: (.06, .50, .50, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            Label:
                id: 'sp'
                text: ''
                size_hint_y: .7
        
        BoxLayout:
            id: all_content
            padding: (20, 10)
            size_hint_x: .8
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: user_scrn
                    name: 'user_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: users_scrn
                        BoxLayout:
                            id: ops_fields
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add
                                text: 'Add User'
                                on_release: root.add_user_fields()
                            Button: 
                                id: crud_update
                                text: 'Update User'
                                on_release: root.update_user_fields()
                            Button: 
                                id: crud_remove
                                text: 'Remove User'
                                on_release: root.remove_user_fields()
                                
                Screen:
                    id: product_scrn
                    name: 'product_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            id: products_scrn
                        BoxLayout:
                            id: ops_fields_p
                            spacing: 10
                            size_hint_y: None
                            height: 35
                        BoxLayout:
                            id: ops_btns_p
                            spacing: 10
                            size_hint_y: None
                            height: 45
                            Button:
                                id: crud_add_p
                                text: 'Add User'
                                on_release: root.add_product_fields()
                            Button: 
                                id: crud_update_p
                                text: 'Update User'
                                on_release: root.update_product_fields()
                            Button: 
                                id: crud_remove_p
                                text: 'Remove User'
                                on_release: root.remove_product_fields()
                Screen:
                    id: analysis_scrn
                    name: 'analysis_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        spacing: 10
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: 45
                            Spinner:
                                id: target_product
                                text: 'Choose Product'
                            Button:
                                id: submit_analysis
                                text: 'View Stats'
                                size_hint_x: .3
                                on_release: root.view_stats()
                        BoxLayout:
                            id: analysis_res
                
            